<div class="container register">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto">
      <div class="card card-body login-card">
        <h1 class="text-center mt-3">Register</h1>
        <hr>
        <form action="/users/Register" class="mt-3">
          <div class="form-group">
            <label for="name">Email : </label>
            <input type="text" name="name" id="name" class="form-control register-formControl" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="email">Email : </label>
            <input type="email" name="email" id="email" class="form-control register-formControl" placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="password">Password : </label>
            <input type="password" name="password" id="password" class="form-control register-formControl" placeholder="Enter Password">
          </div>
          <div class="form-group">
            <label for="confirmPassword">Password : </label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control register-formControl" placeholder="Enter confirmPassword">
          </div>
          <button type="submit" class="btn btn-info btn-block">註冊</button>
          <p class="lead mt-4">有帳號了 !  <a href="/users/login" class="register-button ">登入</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
