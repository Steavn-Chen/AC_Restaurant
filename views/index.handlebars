<div class="search-bar">
  <div class="row m-5" id="search-bar">
    <div class="col-12">
      <form action="/search">
        <div class="input-group mb-3">
          <h4 class="search-title"> Enter restaurant name :</h4>
          <div class="input-group">
            <input
              type="text"
              name="keyword"
              class="form-control"
              placeholder="Enter restaurant name to search..."
              aria-label="Resyaurant Name..."
              aria-describedby="search-button"
            />
            <div class="input-group-append">
              <button class="btn btn-info" type="submit" id="search-button"><i
                  class="fas fa-search"
                ></i></button>
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <div class="inner"> 

              <img
                class="card-img-top"
                src="{{this.image}}"
                alt="Sababa 沙巴巴中東美食"
              />
               </a>
               </div> 
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
            </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>